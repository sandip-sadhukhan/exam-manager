<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Question</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://bootswatch.com/4/united/bootstrap.min.css">
</head>

<body style="background-color: #e9ecef;">

    <!-- Navber Section -->
    <%- include('../partials/_navber') %>
    <!-- Navber End -->

    <!-- Create a new Exam section -->
    <div class="container my-4">
        <!-- Errors Section -->
        <% errors.forEach(err => { %>
            <div class="alert alert-danger"><%= err %></div>
         <% }); %> 
        <div class="d-flex justify-content-around"></div>
        <h3 class="my-2"><%= exam.examName %></h3>
        <p><%= exam.examDescription %></p>
        <p>Teacher name - <%= exam.teacherName %></p>
        <hr>
        <form action="/exam/<%= exam._id %>" method="post">
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Your name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name...">
                </div>
            </div>
            <div class="form-group row">
                <label for="roll" class="col-sm-2 col-form-label">Your Roll:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="roll" name="roll" placeholder="Enter your roll...">
                </div>
            </div>
            <div class="form-group row">
                <label for="department" class="col-sm-2 col-form-label">Your Department:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="department" name="department" placeholder="Enter your department...">
                </div>
            </div>
            <p class="lead">Total Questions : <%= questionArr.length %></p>
            <hr>
            <% questionArr.forEach((question, index) => { %>
                <div class="card bg-seconary my-2">
                  <div class="card-header"><h4>Question <%= index+1 %></h4></div>
                  <div class="card-body">
                      <p><%= question.question %></p>
                      <div class="container">
                          <div class="custom-control custom-radio">
                              <input type="radio" id="option1_<%= question.id %>" name="<%= index+1 %>" class="custom-control-input" value="1">
                              <label class="custom-control-label" for="option1_<%= question.id %>"><%= question.option1 %></label>
                            </div>
                            <div class="custom-control custom-radio">
                              <input type="radio" id="option2_<%= question.id %>" name="<%= index+1 %>" class="custom-control-input" value="2">
                              <label class="custom-control-label" for="option2_<%= question.id %>"><%= question.option2 %></label>
                            </div>
                            <div class="custom-control custom-radio">
                              <input type="radio" id="option3_<%= question.id %>" name="<%= index+1 %>" class="custom-control-input" value="3">
                              <label class="custom-control-label" for="option3_<%= question.id %>"><%= question.option3 %></label>
                            </div>
                            <div class="custom-control custom-radio">
                              <input type="radio" id="option4_<%= question.id %>" name="<%= index+1 %>" class="custom-control-input" value="4">
                              <label class="custom-control-label" for="option4_<%= question.id %>"><%= question.option4 %></label>
                            </div>
                      </div>
                  </div>
              </div>
            <% }) %>
            <!-- Questions End -->
            <div class="mt-3 mb-5">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
        </form>
    </div>

    <!-- Create a new Exam section End-->

    <!-- JavaScript Codes -->
    <!-- Bootstrap Dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>
</body>
</html>